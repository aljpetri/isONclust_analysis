##Run the isONclust1         
rule run_isONclust_py:
    input: fastq = outfolder_root+'data/full_length_output.fastq',
           alignment = outfolder_root+"stringtie/drosophila_aligned.sorted.bam",
           index = outfolder_root+"stringtie/drosophila_aligned.sorted.bam.bai"
    output: cluster_outfolder + "result_py_isONclust.txt"
    run:
	    py_output_folder='/scratch/$SLURM_JOB_ID/py',
	    outfolder='/scratch/$SLURM_JOB_ID'
            shell("/usr/bin/time -v isONclust  --t 1  --ont --fastq {input.fastq} --outfolder {py_output_folder}"),
            shell("isONclust write_fastq --N 1 --clusters /scratch/$SLURM_JOB_ID/py/final_clusters.tsv --fastq {input.fastq} --outfolder {outfolder}")
            shell("python compute_cluster_quality.py --clusters /scratch/$SLURM_JOB_ID/py/final_clusters.tsv --classes {input.alignment} --outfile {output} ")


rule run_isONclust_rs:
        input: fastq = outfolder_root+'data/full_length_output.fastq'
        output: cluster_outfolder+"rs/clustering/final_clusters.tsv"
        run:
            outfolder= cluster_outfolder+'rs',
            shell("/usr/bin/time -v /proj/snic2022-6-31/nobackup/alexp/isONclust3/isONclust3/target/release/isONclust3  --fastq {input.fastq} --mode ont  --outfolder {outfolder} --n 1 --seeding minimizer --no-post-cluster true --no-fastq true ")
            #shell("time -p /proj/snic2022-6-31/nobackup/alexp/isONclust_rs/target/release/isONclust3_vector  --fastq {input.fastq} --mode ont  --outfolder {outfolder} --n 1 --seeding minimizer --no-post-cluster true  ")
 
rule run_isONclust_rs_analysis:
        input: fastq = outfolder_root + "data/full_length_output.fastq",
               alignment = outfolder_root+"stringtie/drosophila_aligned.sorted.bam",
               index = outfolder_root+"stringtie/drosophila_aligned.sorted.bam.bai"

        output: cluster_outfolder+"result_rs_isONclust_denovo.txt" 
        run:
            outfolder='/scratch/$SLURM_JOB_ID' # cluster_outfolder+'rs',
            shell("/usr/bin/time -v /proj/snic2022-6-31/nobackup/alexp/isONclust_rs/target/release/isONclust3 --fastq {input.fastq} --mode ont  --outfolder {outfolder} --seeding minimizer  --noncanonical true")
            shell("python compute_cluster_quality.py  --clusters /scratch/$SLURM_JOB_ID/clustering/final_clusters.tsv --classes {input.alignment} --outfile {output}")
            


rule run_GeLuster:
    input: fastq = outfolder_root + 'data/full_length_output.fastq',
           alignment = outfolder_root+"stringtie/drosophila_aligned.sorted.bam",
           index = outfolder_root+"stringtie/drosophila_aligned.sorted.bam.bai"
    output: cluster_outfolder + "result_GeLuster.txt" #cluster_outfolder +'GeLuster/GeLuster.tsv'
    run:
        outfolder = '/scratch/$SLURM_JOB_ID/GeLuster' # cluster_outfolder+'GeLuster'
        shell("/usr/bin/time -v /proj/snic2022-6-31/nobackup/alexp/GeLuster/GeLuster -t 1 -r {input.fastq}  -f fq -s cDNA -o {outfolder}")
        shell("python compute_cluster_quality_geluster.py --clusters /scratch/$SLURM_JOB_ID/GeLuster/GeLuster.tsv --classes {input.alignment} --outfile {output}")
          

rule rattle_cluster:
    input:
        fastq = outfolder_root+'data/full_length_output.fastq',
        alignment = outfolder_root+"stringtie/drosophila_aligned.sorted.bam",
        index = outfolder_root+"stringtie/drosophila_aligned.sorted.bam.bai"
    output:
        cluster_outfolder + "result_rattle.txt"
    run:
        rattle_out_folder = '/scratch/$SLURM_JOB_ID/rattle',
        clusters_out = '/scratch/$SLURM_JOB_ID/rattle/clusters.out'
        cl_summary = '/scratch/$SLURM_JOB_ID/rattle/cluster_summary.tsv'
        shell("mkdir /scratch/$SLURM_JOB_ID/rattle")
        shell("/usr/bin/time -v {rattle_location}rattle cluster -i {input} -t 1 -o {rattle_out_folder} ")
        shell("/usr/bin/time -v {rattle_location}rattle cluster_summary -i {input} -c {clusters_out} >  {cl_summary} ")
        shell("python compute_cluster_quality_geluster.py --clusters {cl_summary} --classes {input.alignment} --outfile {output}")

##Run the remainder of the isONpipeline (isONcorrect, isONform on the isONclust1 and isONclust3 results
rule run_isONcorrect_py:
    input: cluster_outfolder+"py/final_clusters.tsv"
    output: cluster_outfolder +'py/correction/0/corrected_reads.fastq'
    run:  
        this_outfolder=cluster_outfolder +'py/correction', 
        shell('run_isoncorrect --t 20 --outfolder {this_outfolder} --fastq_folder /proj/snic2022-6-31/nobackup/alexp/Results/Drosophila/py/clustering/fastq_files')

rule run_isONform_py:
    input: cluster_outfolder +'py/correction/0/corrected_reads.fastq'
    output: cluster_outfolder +'py/isoforms/transcriptome.fastq'
    run: 
        this_outfolder=cluster_outfolder +'py/isoforms',
        input_folder= cluster_outfolder +'py/correction',
        shell('/usr/bin/time -v python  /proj/snic2022-6-31/nobackup/alexp/isONform/isONform_parallel.py --t 20  --fastq_folder {input_folder} --exact_instance_limit 50 --k 20 --w 31 --xmin 14 --xmax 80 --max_seqs_to_spoa 200 --delta_len 10 --outfolder {this_outfolder} --iso_abundance 5 --split_wrt_batches  --delta_iso_len_3 30 --delta_iso_len_5 50')

rule run_isONcorrect_rs:
    input: cluster_outfolder+"rs/clustering/final_clusters.tsv"
    output: cluster_outfolder +'rs/correction/0/corrected_reads.fastq'
    run:
        this_outfolder=cluster_outfolder +'rs/correction',
        shell('run_isoncorrect --t 20 --outfolder {this_outfolder} --fastq_folder /proj/snic2022-6-31/nobackup/alexp/Results/Drosophila/rs/clustering/fastq_files')

rule run_isONform_rs:
    input: cluster_outfolder +'rs/correction/0/corrected_reads.fastq'
    output: cluster_outfolder +'rs/isoforms/transcriptome.fastq'
    run:
        this_outfolder=cluster_outfolder +'rs/isoforms',
        input_folder= cluster_outfolder +'rs/correction',
        shell('/usr/bin/time -v  python /proj/snic2022-6-31/nobackup/alexp/isONform/isONform_parallel.py --t 20  --fastq_folder {input_folder} --exact_instance_limit 50 --k 20 --w 31 --xmin 14 --xmax 80 --max_seqs_to_spoa 200 --delta_len 10 --outfolder {this_outfolder} --iso_abundance 5 --split_wrt_batches  --delta_iso_len_3 30 --delta_iso_len_5 50 ')


